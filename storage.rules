rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match all files within matter directories (uploads, emails, etc.)
    // This covers:
    // - firms/{firmId}/matters/{matterId}/uploads/{fileHash}.{ext}
    // - firms/{firmId}/matters/{matterId}/emails/{messageId}/body.txt
    // - firms/{firmId}/matters/{matterId}/emails/{messageId}/body.html
    match /firms/{firmId}/matters/{matterId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
                           request.auth.uid == firmId;  // Solo firm
    }
  }
}